<h1>Login</h1>

<p>
	SID: <%= session['sid'] %>
</p>

<% if @notice %>
	<p class="error" style="color:red;">Der Login ist gescheitert!</p>
<% end %>

<%= form_tag sessions_path do -%>
  <p><%= label_tag 'Username', 'Benutzer' %>
  <%= text_field_tag 'uid', params[:uid] %></p>

  <p><%= label_tag 'password', 'Passwort:' %>
  <%= password_field_tag 'password' %></p>

  <p><%= submit_tag %></p>
<% end -%>
